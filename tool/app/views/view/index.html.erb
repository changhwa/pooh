<script id="tree-project" type="text/x-handlebars-template">
  {{#each projects}}
    <li data-project-id="{{id}}" data-target="#project_{{id}}">
      <a href="#">
        <i class="fa fa-archive fa-lg"></i> {{title}} <span class="arrow"></span>
      </a>
    </li>
    <ul id="project_{{id}}" class="incharge-menu collapse in" aria-expanded="true">
    {{#each users}}
      <li data-toggle="collapse" data-target="#project_{{../id}}_user_{{id}}" class="collapsed">
        {{name}} <span class="arrow"></span>
      </li>
      <ul id="project_{{../id}}_user_{{id}}" class="subject-menu collapse in" aria-expanded="true">
        {{#each article}}
          <li name="tree_article_list" data-article-id="{{id}}" data-article-title="{{title}}">{{title}}</li>
        {{/each}}
      </ul>
    {{/each}}
    </ul>
  {{/each}}
</script>

<script  id="article-content-iframe" type="text/x-handlebars-template">
  <div><h3><b> <i class="fa fa-angle-right"></i> {{title}} </b></h3></div>
  <hr/>
  <div class="row">
    <!--글 시작 -->
    <div id="document" class="pull-left" style="width: 90%">
      <iframe id="article-iframe" src="/articles/{{id}}" width="100%" height="100%" class="auto-height" scrolling="no" frameborder="0"></iframe>
    </div>
  </div>
</script>

<script id="attendance_book_table_template" type="text/x-handlebars-template">
  <div id="attendance-book" class="attendance-book">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <i class="fa fa-book"></i>
            &nbsp;출석부&nbsp;
            <i id="attendance_book_add_btn" class="fa fa-plus-square pull-right"></i></h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table id="attendance_book_table" class="table table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  {{#each attendance_book.[0].attendance}}
                    <th>{{@index}}회</th>
                  {{/each}}
                </tr>
              </thead>
              <tbody>
                {{#each attendance_book}}
                  <tr>
                    <th scope="row" width="10%">{{entry_name}}</th>
                      {{#each attendance}}
                        <td name="attendance_book_join_yn"
                            data-attendance-id="{{id}}"
                            data-attendance-number="{{number}}"
                            data-entry-id="{{entry_id}}"
                            data-join-yn="{{join_yn}}">
                          {{join join_yn}}
                        </td>
                      {{/each}}
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</script>