<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <span name="entry_btn" data-toggle="modal" data-target="#project_join_user" data-project-id="<%= project.id %>">Join</span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="project_join_user" tabindex="-1" role="dialog" aria-labelledby="joinLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="joinLabel">Project Entry</h4>
      </div>
      <div class="modal-body">
        <select id="user_list" class="pull-left" multiple="multiple" style="width: 50%; height: 200px;">
        </select>
        <select id="entry_list" multiple="multiple" style="width: 50%; height: 200px;">
        </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button id="entry_save_btn" type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
  <input type="hidden" id="current_project_id" />
</div>
<br>

<%= link_to 'New Project', new_project_path %>
